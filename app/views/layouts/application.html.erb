<!DOCTYPE html>
<html>
<head>
  <title>Barbecues</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application', defer: true %>
  <%= csrf_meta_tags %>
</head>
<body data-hook="controller-<%= controller_name %> action-<%= action_name %>">

  <div class="container">
	<h1> Test Header </h1>
	<% flash.each do |key, msg| %>
		<%= content_tag :div, msg, id: key, style: "color:red;" %>
	<% end %>

    <%= yield %>
  </div>

</body>
</html>
